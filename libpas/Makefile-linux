include musl.mk

PASCC = clang -march=x86-64-v2 -fPIC -pthread -nostdinc -isystem ../pizfix/yolo/include
PASCXX = no_cplusplus_compiler
FILCC = ../build/bin/clang
SHLD = clang -Wl,-dynamic-linker,$(PWD)/../pizfix/yolo/lib/ld-musl-x86_64.so.1 \
	-nostdlib -shared ../pizfix/yolo/lib/crti.o \
	`./find_system_library_file.rb crtbeginS.o` -L../pizfix/yolo/lib
SHLDPOST = `./find_system_library_file.rb libgcc.a` -lyolomusl \
	`./find_system_library_file.rb crtendS.o` ../pizfix/yolo/lib/crtn.o

all: \
	../pizfix/lib/libpizlo.so ../pizfix/lib_test/libpizlo.so \
	../pizfix/lib/filc_crt.o ../pizfix/lib/filc_mincrt.o

clean: common-clean
	rm -f ../pizfix/lib/libpizlo.so
	rm -f ../pizfix/lib_test/libpizlo.so

include common.mk

../pizfix/lib/libpizlo.so: $(PASPIZLOOBJS) $(FILPIZLOOBJS)
	$(SHLD) -o ../pizfix/lib/libpizlo.so $(PASPIZLOOBJS) $(FILPIZLOOBJS) $(SHLDPOST)

../pizfix/lib_test/libpizlo.so: $(PASPIZLOTESTOBJS) $(FILPIZLOOBJS)
	$(SHLD) -o ../pizfix/lib_test/libpizlo.so $(PASPIZLOTESTOBJS) $(FILPIZLOOBJS) $(SHLDPOST)


