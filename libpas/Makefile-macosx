PASCC = xcrun clang
PASCXX = xcrun clang++
FILCC = xcrun ../build/bin/clang

all: \
	../pizfix/lib/libpizlo.dylib ../pizfix/lib_test/libpizlo.dylib \
	../pizfix/lib/libfilc_crt.dylib ../pizfix/lib_test/libfilc_crt.dylib \
	../pizfix/lib/libfilc_mincrt.dylib ../pizfix/lib_test/libfilc_mincrt.dylib

include common.mk

../pizfix/lib/libpizlo.dylib: $(PASPIZLOOBJS) $(FILPIZLOOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib/libpizlo.dylib \
		-o ../pizfix/lib/libpizlo.dylib $(PASPIZLOOBJS) $(FILPIZLOOBJS)

../pizfix/lib_test/libpizlo.dylib: $(PASPIZLOTESTOBJS) $(FILPIZLOOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib_test/libpizlo.dylib \
		-o ../pizfix/lib_test/libpizlo.dylib $(PASPIZLOTESTOBJS) $(FILPIZLOOBJS)

../pizfix/lib/libfilc_crt.dylib: $(MAINOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib/libfilc_crt.dylib \
		-o ../pizfix/lib/libfilc_crt.dylib $(MAINOBJS) -undefined dynamic_lookup

../pizfix/lib_test/libfilc_crt.dylib: $(MAINTESTOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib_test/libfilc_crt.dylib \
		-o ../pizfix/lib_test/libfilc_crt.dylib $(MAINTESTOBJS) -undefined dynamic_lookup

../pizfix/lib/libfilc_mincrt.dylib: $(MINMAINOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib/libfilc_mincrt.dylib \
		-o ../pizfix/lib/libfilc_mincrt.dylib $(MINMAINOBJS) -undefined dynamic_lookup

../pizfix/lib_test/libfilc_mincrt.dylib: $(MINMAINTESTOBJS)
	xcrun clang -dynamiclib -install_name $(PWD)/../pizfix/lib_test/libfilc_mincrt.dylib \
		-o ../pizfix/lib_test/libfilc_mincrt.dylib $(MINMAINTESTOBJS) \
		-undefined dynamic_lookup

check-pas: build/test_pas
	DYLD_LIBRARY_PATH=build build/test_pas

build/test_pas: build/libpas.dylib $(TESTPASOBJS) $(VERIFIEROBJS)
	xcrun clang++ -o build/test_pas $(TESTPASOBJS) $(VERIFIEROBJS) -Lbuild -lpas

build/libpas.dylib: $(PASTESTOBJS)
	xcrun clang -dynamiclib -o build/libpas.dylib $(PASTESTOBJS)

