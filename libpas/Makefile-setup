FILSRCHEADERS = $(wildcard ../filc/include/*.h)
BUILTINSRCHEADERS = $(wildcard ../filc/builtins/*.h)
FILHEADERS = $(patsubst %.h,../pizfix/stdfil-include/%.h,$(notdir $(FILSRCHEADERS)))
BUILTINHEADERS = $(patsubst %.h,../pizfix/builtins-include/%.h,$(notdir $(BUILTINSRCHEADERS)))
ALLHEADERS = $(FILHEADERS) $(BUILTINHEADERS)

all: $(ALLHEADERS)

clean:

../pizfix/stdfil-include/%.h: ../filc/include/%.h
	cp $< $@

../pizfix/builtins-include/%.h: ../filc/builtins/%.h
	cp $< $@

